<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload>ReplaceWindow($INFO[System.StartupWindow])</onload>
    <!-- Set the default setting values -->
    <onload condition="!String.IsEqual(Skin.String(DefaultLoaded),3.0.0.a2)">Skin.SetBool(scmain)</onload>
    <onload condition="!String.IsEqual(Skin.String(DefaultLoaded),3.0.0.a2)">Skin.SetBool(scmovie)</onload>

    <!-- Lock the default settings to not be applied anymore -->
    <onload condition="String.IsEmpty(Skin.String(DefaultLoaded))">Skin.SetString(DefaultLoaded, 3.0.0.a2)</onload>
</window>


